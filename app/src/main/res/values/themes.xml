<resources>
    <!-- Base application theme. -->
    <style name="Theme.BaseApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryLightColor</item>
        <item name="colorSecondaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
    </style>


    <style name="BasicEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_selector</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="hintTextColor">@color/light_grey</item>
    </style>

    <style name="TextEditText" parent="BasicEditText">
        <item name="android:inputType">text</item>
    </style>

    <style name="EmailEditText" parent="BasicEditText">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="PhoneEditText" parent="BasicEditText">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">10</item>
    </style>

    <style name="AmountEditText" parent="BasicEditText">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="PasswordEditText" parent="BasicEditText">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EditTextTopLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/alpha_grey</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="CustomChipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:checkable">true</item>
        <item name="chipIconVisible">true</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="closeIconVisible">false</item>
        <item name="android:textColor">@color/selector_chip_text_color</item>
        <item name="chipStrokeColor">@color/selector_chip_text_color</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">@dimen/_1sdp</item>
        <item name="chipCornerRadius">@dimen/_5sdp</item>
        <item name="chipStartPadding">@dimen/_10sdp</item>
        <item name="chipEndPadding">@dimen/_10sdp</item>
    </style>

</resources>