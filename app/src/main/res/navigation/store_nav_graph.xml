    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/store_nav_graph"
    app:startDestination="@id/storeFragment">


    <fragment
        android:id="@+id/storeFragment"
        android:name="com.example.baseapp.views.fragments.store.StoreFragment"
        android:label="fragment_store"
        tools:layout="@layout/fragment_store" >
        <action
            android:id="@+id/action_storeFragment_to_storeDetailFragment"
            app:destination="@id/storeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/storeDetailFragment"
        android:name="com.example.baseapp.views.fragments.store.StoreDetailFragment"
        android:label="fragment_store_detail"
        tools:layout="@layout/fragment_store_detail" />
